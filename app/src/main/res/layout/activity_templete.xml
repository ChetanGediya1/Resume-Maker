<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Templete">

    <TextView
        android:id="@+id/templete_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Choose the Template"
        android:background="@drawable/back"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/templete_txt"
        android:layout_marginTop="30dp"
        android:src="@drawable/im1" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/templete_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/image1"
        android:src="@drawable/im3" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/image1"
        android:layout_marginTop="20dp"
        android:src="@drawable/im4" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/image2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/image3"
        android:src="@drawable/im2" />



</RelativeLayout>